<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Scan APK -->
        <Button
            android:id="@+id/btnScanApk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN APK (UNKNOWN SOURCE)" />

        <!-- Analyze Installed App -->
        <Button
            android:id="@+id/btnScanInstalled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ANALYZE INSTALLED APP" />

        <!-- RESULT CARD -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@android:color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvAppName"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPackage"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Privacy-sensitive access:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvRisks"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- SIGNATURE VERIFICATION RESULT -->
            <TextView
                android:id="@+id/tvSignature"
                android:layout_marginTop="10dp"
                android:text="Signature verification will appear here"
                android:textColor="#444444"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- FINAL RISK SCORE -->
            <TextView
                android:id="@+id/tvScore"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
