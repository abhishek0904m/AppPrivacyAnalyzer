<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/appIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1E2A3A" />

                    <TextView
                        android:id="@+id/appPackage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="com.example.package"
                        android:textSize="14sp"
                        android:textColor="#6B7A8A" />

                </LinearLayout>

                <TextView
                    android:id="@+id/riskBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp"
                    android:text="LOW (0)"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/badge_med" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Dangerous Permission Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dangerous Permissions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D35400" />

                <LinearLayout
                    android:id="@+id/permissionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Manage Permissions Button -->
        <Button
            android:id="@+id/managePermissionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="MANAGE APP PERMISSIONS"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:background="@drawable/manage_button_bg" />

    </LinearLayout>

</ScrollView>
